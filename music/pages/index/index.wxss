/* pages/index/index.wxss */
/* 轮播图 */
.banners {
  width: 100%;
  height: 300 rpx;

}

.banners image {
  width: 100%;
  height: 100%;
}

/* 图标导航区的特点 */
.navContiner {
  display: flex;
}

.navItem {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20%;
}

.navItem .iconfont {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 100rpx;
  color: white;
  background-color: rgb(240, 19, 19);
  margin: 20rpx 0;
  font-size: 50rpx;
}

.navItem text{
  font-size: 26rpx;
}

/* 推荐歌曲 */
.recommendContainer{
  padding: 20rpx;
}

/* 推荐内容区 */
.recommendScroll{
  display: flex;
  margin-left: 10rpx;
  height: 300rpx;
}
.scrollItem{
  width: 200rpx;
  margin-left: 10rpx;
}
.scrollItem image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}
.scrollItem text{ 
  font-size: 26rpx;
  /* 单行文本溢出
  display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis; */

  /* 多行文本溢出 */
  overflow: hidden;
  text-overflow: ellipsis; 
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

/* 排行榜 */
.topList{
  padding: 20rpx;
}
.topListSwiper{
height: 410rpx;
}
.swiperItem{
  width: 96%;
  background-color: #fbfbfb;
}
.swiperItem .title{
  font-size: 30rpx;
  line-height: 80rpx;
}
.musicItem{
  /* 当一个元素设为flex，其子元素会自动成为block元素 */
  display: flex;
  margin-bottom: 20rpx;
}
.musicItem image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 6rpx;
}
.musicItem .count{
  width: 100rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
}
.musicItem .musicName{
  height: 100rpx;
  line-height: 100rpx;
  max-width: 400rpx;
  white-space: normal;
  overflow: hidden;
  text-overflow: ellipsis;
}